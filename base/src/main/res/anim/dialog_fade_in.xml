<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <scale  android:duration="100"
        android:pivotX="50%"
        android:pivotY="50%"
        android:fromXScale="200%"
        android:fromYScale="200%"
        android:toXScale="95%"
        android:toYScale="95%"/>

    <alpha android:duration="100"
        android:fromAlpha="0"
        android:toAlpha="1"/>

    <scale  android:duration="80"
        android:startOffset="100"
        android:pivotX="50%"
        android:pivotY="50%"
        android:fromXScale="95%"
        android:fromYScale="95%"
        android:toXScale="105%"
        android:toYScale="105%"/>

    <scale  android:duration="50"
        android:startOffset="180"
        android:pivotX="50%"
        android:pivotY="50%"
        android:fromXScale="105%"
        android:fromYScale="105%"
        android:toXScale="100%"
        android:toYScale="100%"/>

</set>