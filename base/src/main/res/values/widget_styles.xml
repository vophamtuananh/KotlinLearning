<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CustomFontTextView">
        <attr name="cftv_font" format="string" />
    </declare-styleable>

    <declare-styleable name="AnimButton">
        <attr name="ab_font" format="string" />
    </declare-styleable>

    <declare-styleable name="LoadingView">
        <attr name="lv_measure_linear" format="boolean" />
        <attr name="lv_should_square" format="boolean" />
        <attr name="lv_percent" format="integer" />
        <attr name="indicatorName" format="string" />
        <attr name="indicatorColor" format="color" />
    </declare-styleable>

    <declare-styleable name="LoadMoreRecyclerView">
        <attr name="number_to_load_more" format="integer" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
        <attr name="civ_circle_background_color" format="color" />
        <attr name="civ_follow_height" format="boolean" />
        <attr name="disable_circular" format="boolean" />
    </declare-styleable>

</resources>